{% extends 'FlouVideoManagerBundle::internlayout.html.twig' %}

{% block sidemenu %}
<ul id="sidemenulist">
	<li><a href="{{ path('channel_edit') }}"><span class="label">Einstellungen</span></a></li>
	<li><a href="{{ path('channel_head') }}"><span class="label">Kopfbereich</span></a></li>
	<li><a href="{{ path('channel_menu') }}"><span class="label">Men端bereich</span></a></li>
	<li><a href="{{ path('design_color') }}"><span class="label">Farben</span></a></li>
	<li><a href="{{ path('design_template') }}"><span class="label">Template</span></a></li>
</ul>
{% endblock %}

{% block content %}
<h2>Men端bereich</h2>
<hr/>
<form action="" method="post" {{ form_enctype(form) }}>

	<div class="formwrapper">
	<fieldset>
	{{ form_widget(form.menu) }}
	</fieldset>
	
    {{ form_widget(form) }}

    <input class="greenbutton" type="submit" />
    </div>
</form>
{% endblock %}

{% block help %}
<p>Der Inhalt des Men端bereichs wird in der Men端leiste angezeigt.</p>
{% endblock %}

