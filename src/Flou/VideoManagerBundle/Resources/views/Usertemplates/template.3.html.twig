  <style type="text/css" media="screen">
  {% autoescape false %}
  
  html, body{
  font-size:{{ design.fontsize }}px;
  }
  
  {# COLOR1 #}
  {% if design.color1 != '' %}
  	html, body, .innerwrapper{
  		background-color:#{{ design.color1 }};
  	}
  {% endif %}
  {% if design.color1 != '' and design.hovercolor1 != '' %}
  	html, body{
  		{{ gradient({'0%':['#',design.color1]|join, '50%':['#',design.hovercolor1]|join, '100%':['#',design.color1]|join}) }}
  	}
  {% endif %}
  
  {# COLOR2 #}
  {% if design.color2 != '' %}
  	#menu1, .contentwrapper{
  		background-color:#{{ design.color2 }};
  	}
  {% endif %}
  
  {# COLOR3 #}
  {% if design.color3 != '' %}
  	#menu2, .footer{
  		background-color:#{{ design.color3 }};
  	}
  {% endif %}
  
  {# HOVERCOLOR1 #}
  {% if design.hovercolor1 != '' %}
  .widget3{
	border-bottom-color:#{{ design.hovercolor1 }};
}
  {% endif %}
  
  {# HOVERCOLOR2 #}
  {% if design.hovercolor2 != '' %}
  .menu1singleitem:hover, .menu1groupitem:hover, .menu1grouplist{
	background-color:#{{ design.hovercolor2 }};
	}
  {% endif %}
  
  {# HOVERCOLOR3 #}
  {% if design.hovercolor3 != '' %}
  .menu2singleitem:hover, .menu2groupitem:hover, .menu2grouplist{
	background-color:#{{ design.hovercolor3 }};
	}
  {% endif %}
  
  {# HEADINGCOLOR #}
  {% if design.headingcolor != '' %}
  h1,h2,h3,h4,h5,h6{
  	color:#{{ design.headingcolor }};
  }
  {% endif %}
  
  {# HEADINGFONT #}
  {% if design.headingfont != '' %}
  h1, h2, h3, h4, h5, h6, .widget3head, .playlistitem_title, .menu4head{
  	font-family:{{ design.headingfont }};
  }
  {% endif %}
  
  {# FONT #}
  {% if design.font != '' %}
  .mainwrapper{
  	font-family:{{ design.font }};
  }
  {% endif %}
  
  {# FONTCOLOR1 #}
  {% if design.fontcolor1 != '' %}
  .mainwrapper{
  	color:#{{ design.fontcolor1 }};
  }
  {% endif %}
  
  {# FONTCOLOR2 #}
  {% if design.fontcolor2 != '' %}
    .contentwrapper{
  	color:#{{ design.fontcolor2 }};
  }
  {% endif %}
  
  {# FONTCOLOR3 #}
  {% if design.fontcolor3 != '' %}
    .footer{
  	color:#{{ design.fontcolor3 }};
  }
  {% endif %}
  
  {# HOVERFONTCOLOR1 #}
  {% if design.hoverfontcolor1 != '' %}
  {% endif %}
  
  {# HOVERFONTCOLOR2 #}
  {% if design.hoverfontcolor2 != '' %}
  {% endif %}
  
  {# HOVERFONTCOLOR3 #}
  {% if design.hoverfontcolor3 != '' %}
  {% endif %}
  
  {# LINKCOLOR1 #}
  {% if design.linkcolor1 != '' %}
  .innerwrapper a{
	color:#{{ design.linkcolor1 }};
}
  {% endif %}
  
  {# LINKCOLOR2 #}
  {% if design.linkcolor2 != '' %}
  #menu1 a, .contentwrapper a, .menu1groupitem{
	color:#{{ design.linkcolor2 }};
	}
  {% endif %}
  
  {# LINKCOLOR3 #}
  {% if design.linkcolor3 != '' %}
    #menu2 a, .menu2groupitem, .footer a{
	color:#{{ design.linkcolor3 }};
	}
  {% endif %}
  
  {# HOVERLINKCOLOR1 #}
  {% if design.hoverlinkcolor1 != '' %}
  .innerwrapper a:hover{
	color:#{{ design.hoverlinkcolor1 }};
}
  {% endif %}
  
  {# HOVERLINKCOLOR2 #}
  {% if design.hoverlinkcolor2 != '' %}
  	.menu1groupitem:hover .menu1head a span{
  	color:#{{ design.hoverlinkcolor2 }};
  	}
  
    #menu1 a:hover, .contentwrapper a:hover{
	color:#{{ design.hoverlinkcolor2 }};
	}
	.menu1groupitem:hover{
	color:#{{ design.hoverlinkcolor2 }};
	}
  {% endif %}
  
  {# HOVERLINKCOLOR3 #}
  {% if design.hoverlinkcolor3 != '' %}
      #menu2 a:hover, .menu2groupitem:hover, .footer a:hover{
	color:#{{ design.hoverlinkcolor3 }};
	}
	
	.menu2groupitem:hover .menu2head a span{
  	color:#{{ design.hoverlinkcolor3 }};
  	}
  {% endif %}
  
  {% endautoescape %}
  </style>
  

