#menu1{
background-color:#DEDAB7;
}

#menu2{
background-color:#836E7D;

}

.footer{
	background-color:#836E7D;
}

.contentwrapper{
background-color:#DEDAB7;
}

.menu1singleitem:hover, .menu1groupitem:hover, .menu1grouplist{
background-color:#CECAA7;
}

.menu2singleitem:hover, .menu2groupitem:hover, .menu2grouplist{
background-color:#735E6D;
}

.innerwrapper{
	background-color:#ffffff;
}

.widget3{
	border-bottom-color:#735E6D;
}

#menu1 a, #menu1 a:hover, #menu2 a, #menu2 a:hover, .contentwrapper a, .contentwrapper a:hover, .footer a, .footer a:hover{
	color:#735E6D;
	text-decoration:none;
}

.menu1groupitem{
	color:#735E6D;
}

.innerwrapper a, .innerwrapper a:hover{
	color:#735E6D;
}

#menu2 a, .footer a, #menu2 a:hover, .footer a:hover{
	color:#ffffff;
