  <style type="text/css" media="screen">
  html, body{
	text-align:center
}

p {
	margin-top:3px;
	margin-bottom:3px;
}

.mainwrapper{
	text-align:left;
	width:960px;
	margin:auto;
}



#menu1{
margin-bottom:5px;
height: auto;
}

.widget2{
	margin-top:5px;
}

.menu1singleitem, .menu1groupitem, .menu2singleitem, .menu2groupitem{
float:left;
position:relative;
}

#menu1 ul, #menu2 ul{
list-style-type:none;
list-style-image:none;
margin:0px;
padding:0px;
display:block;
}

.menu1singleitem a, .menu1head, .menu2singleitem a, .menu2head{
margin:0px;
display:block;
}

.menu1signleitemspan{
padding:10px 15px;
display:block;
}

.menu2signleitemspan{
	display:block;
padding:5px 15px;
}



.menu1grouplist, .menu2grouplist{
	visibility:hidden;
	z-index:598;
	position:absolute;
	top:100%;
}

.menu1grouplistitem, .menu2grouplistitem{
	width:250px;
}

.menu1grouplistitem a, .menu2grouplistitem a{
	padding:5px;
	display:block;
}

.menu1grouplistitem:first-child, .menu2grouplistitem:first-child{
	margin-top:5px;
}

.menu1grouplistitem:last-child, .menu2grouplistitem:last-child, .contentwrapper{
	margin-bottom:5px;
}

.menu1groupitem:hover > ul, .menu2groupitem:hover > ul{
	visibility: visible;
}

.contentwrapper{
	float:right;
	width:500px;
	padding:10px;
	margin-top:5px;
}

.footer{
	clear:both;
}

.menu4list{
	margin:0px;
	padding:0px;
	list-style-type:none;
list-style-image:none;
}

.menu4singleitem, .menu4groupitem{
	float:left;
	padding:5px 15px;
}

.menu4groupitem{
	width:150px;
}

.menu4grouplist{
	margin:5px 0px 0px 0px;
	padding:0px;
		list-style-type:none;
list-style-image:none;
}

.copyright{
	clear:both;
	text-align:center;
	padding-bottom:5px;
	font-size:0.8em;
}

.leftmenu{
	float:left;
}

#menu3, .widget3{
	width:410px;
	margin:15px;
}

.widget3 {
	padding-bottom:10px;
	border-bottom-style:dotted;
	border-bottom-width:1px;
}

.widget4{
	clear:both;
}

.widget3head{
	font-size:1.3em;
	margin-bottom:5px;
}

.menu3list, .menu3grouplist{
	margin:0px;
	padding:0px;
	list-style-type:none;
list-style-image:none;
}

.menu3groupitem, .menu3grouplist, .menu3groupitem, .menu3singleitem, .menu3grouplistitem{
	float:left;
}

.menu3grouplistitem:after, .menu3singleitem:after{
	content: ",\0000a0";
}

.menu3head, .widget4head, .widget1head, .widget2head{
	display:none;
}

#langright{
	float:right;
	margin:3px;
}

#copyright{
	position:relative;
	font-size:0.8em;
	padding:4px;
}




